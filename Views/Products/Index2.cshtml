@model IEnumerable<NortwindMVC.Models.Products>


@{
    ViewBag.Title = "Index2";
}


<div class="container-fluid">
    <h2>Productscards</h2>

    <div class="row">
        @foreach (NortwindMVC.Models.Products prod in Model)
        {
            <div class="col-lg-3">

                <div class="card mb-3">
                    <h3 class="card-header">@prod.ProductName</h3>
                    <div class="card-body">
                        <h5 class="card-title">@prod.Categories.CategoryName</h5>
                        <h6 class="card-subtitle text-muted">Unit price: @prod.UnitPrice.Value.ToString("0.00")</h6>
                    </div>

                    <img style="height:200px; width:100%; display:block" src="@prod.ImageLink" alt="@prod.ImageLink" />


                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Unit in stock: @prod.UnitsInStock</li>
                        <li class="list-group-item">Units on order: @prod.UnitsOnOrder</li>
                        <li class="list-group-item">Reorder level: @prod.ReorderLevel</li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                    <div class="card-footer text-muted">
                        2 days ago
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Card title</h4>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>